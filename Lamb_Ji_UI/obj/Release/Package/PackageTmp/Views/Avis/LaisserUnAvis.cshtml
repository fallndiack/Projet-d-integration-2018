@model Lamb_Ji_ViewModel.LaisserUnAvisViewModel
@{
    ViewBag.Title = "Laisser Un Avis";
}

<h2>Laisser Un Avis sur @Model.NomAffiche</h2>
@using (Html.BeginForm("SaveComment", "Avis", FormMethod.Post))
{
<div>
    
    @*<div class="form-group">
        <label>Nom :</label>
        <input type="text" name="nom" id="nom" class="form-control" required />
    </div>*@
    <div class="form-group">
        <label>Commentaire :</label>
        <textarea name="commentaire" id="commentaire" rows="5" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label>Choisissez une note entre 1 et 5</label>
        <select name="note" id="note" class="form-control" required>
            <option>1</option>
            <option>1.5</option>
            <option>2</option>
            <option>2.5</option>
            <option>3</option>
            <option>3.5</option>
            <option>4</option>
            <option>4.5</option>
            <option>5</option>
        </select>
    </div>
        <input type="submit" class="btn btn-primary" value="Envoyer" />
    </div>
    <input type="hidden" value="@Model.AfficheID" name="afficheID" id="afficheID" />
    }
