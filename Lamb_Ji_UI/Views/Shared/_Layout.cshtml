<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LAMB_JI GESTION</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/DataTables")

    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            toastr.options = {
                "debug": false,
                "positionClass": "toast-bottom-right",
                "onclick": null,
                "fadeIn": 300,
                "fadeOut": 1000,
                "timeOut": 3000,
                "extendedTimeOut": 1000,
                "progressBar": true
            }
        });

    </script>

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

</head>
<body>

    <div class="panel panel-body" style="min-height:256px">
        <div class="col-md-3">

            @{ Html.RenderAction("Menu", "MenuAccueil");}

        </div>
        <div class="col-md-9">

            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("LAMB_JI", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Clubs", "Index", "Club")</li>
                            <li>@Html.ActionLink("Slider", "AddImage", "Slider")</li>
                            <li>@Html.ActionLink("Stades", "Index", "Stade")</li>
                            <li>@Html.ActionLink("Lutteurs", "Index", "Lutteur")</li>
                            <li>@Html.ActionLink("Arbitres", "Index", "Arbitre")</li>
                            <li>@Html.ActionLink("Affiche", "Index", "Affiche")</li>


                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
            @{ Html.RenderAction("SliderAccueil", "Slider");}

            <div class="container body-content">
                @RenderBody()
                @*<hr />*@

            </div>
        </div>
        
    </div>
    <footer>
        @Html.Partial("_footer")
    </footer>
</body>
</html>
