
@{
    ViewBag.Title = "AddNewClub";
}
<div class="container">
    <h2>Ajouter un nouveau Club</h2>
    <div class="row">
        <div class="col-md-5">
            <form id="AddNewClub" method="post" enctype="multipart/form-data" onsubmit="return AjaxPost(this)">
                <label>Nom</label> <br />
                <input id="ClubName" name="ClubName" class="form-control" placeholder="Nom du club" />

                <label>Adresse</label> <br />
                <input id="ClubAdresse" name="ClubAdresse" class="form-control" placeholder="Adresse du club" />

                <label>Email</label> <br />
                <input id="ClubEmail" name="ClubEmail" class="form-control" placeholder="Email du club" />

                <label>DateCreation</label> <br />
                <input id="ClubDateCreation" name="ClubDateCreation" class="form-control" placeholder="Date de creation du club" />

                <label>Image</label> <br />
                <input id="ImageUpload" name="ImageUpload" class="form-control" type="file" />

                <button class="btn btn-primary" id="btnSubmit">Ajouter</button>


            </form>
        </div>
    </div>

</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>

    function AjaxPost(formData) {
        var ajaxConfig = {
            type: "post",
            url: "/Club/SaveData",
            data: new FormData(formData),
            succes: function (result) {
                alert(result);
                    //toastr.info(result);
                window.location.href = "/Club/AddNewClub";    
            }
        }


        if ($(formData).attr('enctype') == "multipart/form-data") {
            ajaxConfig["contentType"] = false;
            ajaxConfig["processData"] = false;
        }

        $.ajax(ajaxConfig);
        return false;
    }
</script>



