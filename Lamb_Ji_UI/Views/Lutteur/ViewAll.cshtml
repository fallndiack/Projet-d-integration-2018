@model IEnumerable<Lamb_Ji_ViewModel.LutteurViewModel>

@{
    ViewBag.Title = "ViewAll";
}


<h2>Liste des lutteurs</h2> <br /><br />


    <table class="table table-striped table-condensed" id="LutteurTable" cellspacing="0" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LutteurName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LutteurEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LutteurPoids)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LutteurDateNaissance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LutteurAddresse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LutteurDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClubName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LutteurTelephone)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LutteurName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LutteurEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LutteurPoids)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LutteurDateNaissance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LutteurAddresse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LutteurDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Club.ClubName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LutteurTelephone)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Lutteur", new { id=@item.LutteurID})')"><i class="fa fa-pencil fa-lg"></i></a>
                        <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Lutteur", new { id=@item.LutteurID})')"><i class="fa fa-trash fa-lg"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>








    <script>
        $(document).ready(function () {
            activatejQueryTable();
        });



        function activatejQueryTable() {
            $("#LutteurTable").DataTable();
        }

        $(function () {
            activatejQueryTable();
        });




    </script>
